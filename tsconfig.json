{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "outDir": "distribution",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "module": "ESNext",
    "noEmitHelpers": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "checkJs": true,
    "allowJs": true
  },
  "include": [
    "src", "src/module.cjs"
  ]
}
